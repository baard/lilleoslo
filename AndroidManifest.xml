<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="no.rehn.android.trafikanten"
      android:versionCode="1"
      android:versionName="1.0.0">
    <application android:icon="@drawable/subway_small" android:label="@string/app_name">
        <activity android:name="no.rehn.android.trafikanten.TrafikantenActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    <uses-library android:name="android.test.runner"></uses-library>
<uses-library android:name="com.google.android.maps"></uses-library>
<activity android:name="no.rehn.android.trafikanten.DirectionsActivity" android:label="@string/navigate_home"></activity>
<activity android:name="no.rehn.android.trafikanten.StageDetailsActivity"></activity>
<activity android:name="no.rehn.android.trafikanten.ConfigActivity"></activity>
</application>
<instrumentation android:targetPackage="no.rehn.android.trafikanten" android:label="unittest" android:name="android.test.InstrumentationTestRunner"></instrumentation>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>

<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
<uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"></uses-permission>
</manifest> 