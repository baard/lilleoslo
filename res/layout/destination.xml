<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="?android:attr/listPreferredItemHeight">
	<TextView android:id="@+id/destinationTitle" android:text="Home sweet home"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1" android:gravity="center_vertical" 
		android:ellipsize="marquee" android:singleLine="true"/>
	<TextView android:id="@+id/destinationDistance" android:text="10.0km"
		android:gravity="center_vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1"/>
</LinearLayout>